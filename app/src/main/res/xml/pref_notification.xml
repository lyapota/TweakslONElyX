<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.lyapota.tweakslonelyx">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <CheckBoxPreference
        android:key="notifications_new_message"
        android:title="@string/pref_title_new_message_notifications"
        android:defaultValue="true" />

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <com.lyapota.peferences.DisplayGamma
        android:key="dimmer_gamma_pref"
        android:title="@string/pref_title_dimmer" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <SwitchPreference
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_vibrate"
        android:title="@string/pref_title_vibrate"
        android:defaultValue="true" />

    <com.lyapota.peferences.ColorPreference
        android:key="dash_colorkey"
        android:title="Preference Title"
        android:summary="Preference summary"
        android:defaultValue="@android:color/white"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        app:numColumns="5"
        app:itemLayout="@layout/dash_grid_item_color"
        />

    <com.lyapota.peferences.SliderPreference
        android:defaultValue="@string/slider_default"
        android:dialogMessage="@string/slider_message"
        android:key="basic_slider"
        android:summary="@array/slider_summaries"
        android:title="@string/slider_title" />

</PreferenceScreen>
